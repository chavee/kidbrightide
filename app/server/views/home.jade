			ul.nav.navbar-nav
				img(src="/images/SVG/Logo.svg", height="60").kb_logo_top
			ul.nav.navbar-nav.navbar-right
				li
					input#toggle-lang.toggle(type='checkbox' checked=false style="margin-top:10px")
